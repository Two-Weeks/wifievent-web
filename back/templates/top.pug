doctype html 
html(lang='ko')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/static/css/reset.css')
    link(rel='stylesheet', href='/static/css/top.css')
    title #{name}
  body 
    div(class='container')
      form(class='infected-button-form', method='post')
          input(type='hidden', name='infected' value='false')
          button(class='infected-button', type='submit') OK
      div(class='content')
